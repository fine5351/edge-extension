{
  "manifest_version": 3,
  "name": "B站自動互動",
  "version": "1.0",
  "description": "自動點讚、收藏和分享B站視頻",
  "host_permissions": [
    "https://www.bilibili.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js"
      ],
      "matches": [
        "https://www.bilibili.com/*"
      ]
    }
  ]
}